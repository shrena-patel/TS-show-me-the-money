{
  "name": "show-me-the-money",
  "version": "0.4.0",
  "description": "$how Me The Money",
  "repository": "https://github.com/dev-academy-challenges/show-me-the-money.git",
  "main": "server/index.ts",
  "scripts": {
    "start": "ts-node server",
    "dev": "run-p dev:client dev:server",
    "dev:client": "npm run webpack -- --watch",
    "dev:server": "nodemon --watch server server/index.ts",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "webpack": "webpack --config ./client/webpack.config.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'",
    "test": "jest",
    "test:watch": "jest --noStackTrace --watchAll",
    "build": "run-p build:client build:server",
    "build:client": "npm run webpack -- --mode production",
    "build:server": "npm run knex -- migrate:latest",
    "dokku:deploy": "git push dokku main",
    "dokku:migrate": "dokku run npm run knex migrate:latest",
    "dokku:rollback": "dokku run npm run knex migrate:rollback",
    "dokku:seed": "dokku run npm run knex seed:run"
  },
  "keywords": [
    "fullstack"
  ],
  "author": "Dev Academy Aotearoa",
  "license": "ISC",
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-env",
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "jest": {
    "setupFiles": [
      "./tests/setup-dotenv.js"
    ]
  },
  "devDependencies": {
    "@auth0/auth0-react": "^1.12.1",
    "@babel/core": "^7.15.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.17.12",
    "@devacademy/eslint-config": "^1.8.0",
    "@redux-devtools/extension": "^3.2.5",
    "@types/express": "^4.17.16",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-redux": "^7.1.25",
    "babel-loader": "^8.2.2",
    "bulma": "^0.9.2",
    "css-loader": "^6.3.0",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.2.2",
    "mini-css-extract-plugin": "^2.3.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.1",
    "react": "^18.0.2",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.4",
    "react-router-dom": "^6.4.2",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2",
    "sass": "^1.50.1",
    "sass-loader": "12.6.0",
    "sqlite3": "^5.1.2",
    "superagent": "7.1.1",
    "supertest": "^6.2.2",
    "ts-jest": "^29.0.3",
    "typescript": "~4.8.4",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "express": "^4.17.2",
    "knex": "^2.3.0",
    "pg": "^8.8.0",
    "ts-node": "^10.9.1"
  },
  "browserslist": "> 2%, not dead"
}
